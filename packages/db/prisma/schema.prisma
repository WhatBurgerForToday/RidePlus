generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["jsonProtocol"]
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Post {
    id      String @id @default(cuid())
    title   String
    content String
}

model Ride {
    id String @id @default(cuid())

    driverId   String
    passengers Passenger[]

    locations String @db.Text
}

model Passenger {
    id     String @id @default(cuid())
    ride   Ride   @relation(fields: [rideId], references: [id])
    rideId String

    @@unique([rideId, id])
    @@index([rideId])
}
